      {
        "id": 412687351186098,
        "definition": {
          "title": "FlashArray System Detail",
          "title_size": "16",
          "title_align": "left",
          "type": "query_table",
          "requests": [
            {
              "formulas": [
                {
                  "alias": "Array Health",
                  "conditional_formats": [
                    {
                      "palette": "white_on_green",
                      "value": 1,
                      "comparator": ">="
                    },
                    {
                      "palette": "white_on_red",
                      "value": 1,
                      "comparator": "<"
                    }
                  ],
                  "limit": {
                    "count": 500,
                    "order": "desc"
                  },
                  "formula": "query1"
                },
                {
                  "alias": "Cloud Mediator Status",
                  "conditional_formats": [
                    {
                      "palette": "white_on_green",
                      "comparator": ">=",
                      "value": 1
                    },
                    {
                      "palette": "white_on_red",
                      "comparator": "<",
                      "value": 1
                    }
                  ],
                  "formula": "query2"
                },
                {
                  "alias": "Data Reduction Ratio",
                  "conditional_formats": [],
                  "formula": "query3"
                },
                {
                  "alias": "Array Capacity",
                  "formula": "query11"
                },
                {
                  "alias": "Array Free Space",
                  "conditional_formats": [
                    {
                      "palette": "white_on_red",
                      "comparator": "<=",
                      "value": 1000000000000
                    },
                    {
                      "palette": "white_on_green",
                      "comparator": ">",
                      "value": 1000000000000
                    }
                  ],
                  "formula": "query11 - query6"
                },
                {
                  "alias": "Utilization %",
                  "conditional_formats": [
                    {
                      "palette": "white_on_green",
                      "comparator": "<=",
                      "value": 80
                    },
                    {
                      "palette": "white_on_red",
                      "comparator": ">",
                      "value": 80
                    }
                  ],
                  "formula": "query6 / query11 * 100"
                }
              ],
              "response_format": "scalar",
              "queries": [
                {
                  "query": "min:purefa.hardware.chassis_health{$ArrayName,$Env} by {fa_array_name}",
                  "data_source": "metrics",
                  "name": "query1",
                  "aggregator": "last"
                },
                {
                  "query": "min:purefa.pod.mediator_status{$ArrayName,$Env} by {fa_array_name}",
                  "data_source": "metrics",
                  "name": "query2",
                  "aggregator": "last"
                },
                {
                  "query": "avg:purefa.array.space_datareduction_ratio{$ArrayName,$Env} by {fa_array_name}",
                  "data_source": "metrics",
                  "name": "query3",
                  "aggregator": "last"
                },
                {
                  "query": "sum:purefa.array.space_capacity_bytes{$ArrayName,$Env} by {fa_array_name}",
                  "data_source": "metrics",
                  "name": "query11",
                  "aggregator": "last"
                },
                {
                  "query": "sum:purefa.array.space_used_bytes{$ArrayName,$Env} by {fa_array_name}",
                  "data_source": "metrics",
                  "name": "query6",
                  "aggregator": "last"
                }
              ]
            }
          ],
          "has_search_bar": "always"
        },
        "layout": {
          "x": 2,
          "y": 0,
          "width": 10,
          "height": 2
        }
      },
