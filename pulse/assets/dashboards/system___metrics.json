    },
    {
      "id": 6845240197107927,
      "definition": {
        "title": "System memory",
        "show_legend": true,
        "legend_layout": "auto",
        "type": "timeseries",
        "requests": [
          {
            "response_format": "timeseries",
            "queries": [
              {
                "data_source": "metrics",
                "name": "query1",
                "query": "sum:system.mem.usable{$scope}"
              },
              {
                "data_source": "metrics",
                "name": "query2",
                "query": "sum:system.mem.total{$scope}"
              }
            ],
            "formulas": [
              {
                "formula": "query1"
              },
              {
                "formula": "query2 - query1"
              }
            ]
          }
        ]
      }
    },
    {
