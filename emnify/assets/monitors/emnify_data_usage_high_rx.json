{
  "version": 2,
  "created_at": "2022-09-30",
  "last_updated_at": "2022-09-30",
  "title": "Receiving traffic is abnormally high",
  "tags": [
    "integration:emnify"
  ],
  "description": "A sudden increase in traffic can cause performance and availability issues. This monitor tracks if receiving traffic on any particular device is abnormally high.",
  "definition": {
    "message": "Incoming traffic for a device is higher than usual.",
    "name": "[EMnify] data receiving for a device {{host.host}} is higher than usual.",
    "options": {
      "include_tags": true,
      "new_group_delay": 60,
      "notify_audit": false,
      "notify_no_data": false,
      "renotify_interval": 0,
      "require_full_window": false,
      "silenced": {},
      "threshold_windows": {
        "recovery_window": "last_1h",
        "trigger_window": "last_30m"
      },
      "thresholds": {
        "critical": 1,
        "critical_recovery": 0,
        "warning": 0.7
      },
      "timeout_h": 1
    },
    "priority": null,
    "query": "sum(last_12h):anomalies(sum:emnify.endpoint.volume_rx{*} by {host}.as_count().fill(zero, 0).rollup(sum, 300), 'basic', 2, direction='above', interval=120, alert_window='last_30m', count_default_zero='true') >= 1",
    "restricted_roles": null,
    "tags": [
      "integration:emnify"
    ],
    "type": "query alert"
  }
}