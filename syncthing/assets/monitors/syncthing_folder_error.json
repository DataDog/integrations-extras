{
  "version": 2,
  "created_at": "2022-04-13",
  "last_updated_at": "2022-04-13",
  "title": "Folder errors",
  "tags": [
    "integration:syncthing"
  ],
  "description": "Folder errors refer to issues or problems that occur within specific synchronized folders. This monitor tracks the folder errors for each device and folder. Alerts can indicate that errors have occurred within that specific folder.",
  "definition": {
    "message": "@all",
    "name": "Syncthing error on {{host.name}} in {{folder.name}}",
    "options": {
      "escalation_message": "",
      "include_tags": true,
      "new_host_delay": 300,
      "notify_audit": false,
      "notify_no_data": false,
      "renotify_interval": 0,
      "require_full_window": false,
      "silenced": {},
      "thresholds": {
        "critical": 0
      }
    },
    "priority": null,
    "query": "sum(last_5m):sum:syncthing.folder.errors{*} by {host,folder} > 0",
    "restricted_roles": null,
    "tags": [
      "integration:syncthing"
    ],
    "type": "query alert"
  }
}