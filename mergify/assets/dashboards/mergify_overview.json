      "definition": {
        "title": "Mergify merge queue length",
        "title_size": "16",
        "title_align": "left",
        "show_legend": true,
        "legend_layout": "horizontal",
        "legend_columns": [
          "avg",
          "min",
          "max",
          "value",
          "sum"
        ],
        "type": "timeseries",
        "requests": [
          {
            "formulas": [
              {
                "formula": "query1"
              }
            ],
            "queries": [
              {
                "name": "query1",
                "data_source": "metrics",
                "query": "max:mergify.merge_queue_length{$repository} by {branch,repository}"
              }
            ],
            "response_format": "timeseries",
            "style": {
              "palette": "dog_classic",
