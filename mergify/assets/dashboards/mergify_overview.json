      "definition": {
        "title": "Median time to merge per repository per branch per queue",
        "type": "treemap",
        "requests": [
          {
            "response_format": "scalar",
            "queries": [
              {
                "name": "query2",
                "data_source": "metrics",
                "query": "avg:mergify.time_to_merge.median{$repository} by {repository,branch,queue}",
                "aggregator": "last"
