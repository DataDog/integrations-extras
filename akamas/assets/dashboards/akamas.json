            "id": 7449562634989530,
            "definition": {
              "title": "Clusters at risk",
              "type": "query_value",
              "requests": [
                {
                  "formulas": [
                    {
                      "formula": "query1"
                    }
                  ],
                  "queries": [
                    {
                      "data_source": "events",
                      "name": "query1",
                      "indexes": [
                        "*"
                      ],
                      "compute": {
                        "aggregation": "cardinality",
                        "metric": "cluster"
                      },
                      "group_by": [],
                      "search": {
                        "query": "source:my_apps type:reliability"
                      }
                    }
                  ],
                  "response_format": "scalar"
                }
              ],
              "autoscale": true,
              "precision": 2
