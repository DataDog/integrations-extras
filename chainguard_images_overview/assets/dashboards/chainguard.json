          {
            "id": 5775187560481180,
            "definition": {
              "title": "Vulnerabilities in Most Used Images",
              "title_size": "16",
              "title_align": "left",
              "type": "query_table",
              "requests": [
                {
                  "response_format": "scalar",
                  "queries": [
                    {
                      "query": "sum:contimage.running_containers{$env,$cluster_name,$short_image} by {image_name}",
                      "data_source": "metrics",
                      "name": "query1",
                      "aggregator": "avg"
                    },
                    {
                      "query": "sum:contimage.running_containers{$env,$cluster_name,$short_image} by {image_name}",
                      "data_source": "metrics",
                      "name": "query2",
                      "aggregator": "avg"
                    },
                    {
                      "query": "sum:contimage.vuln_count{$env,$cluster_name,$short_image} by {image_name}",
                      "data_source": "metrics",
                      "name": "query3",
                      "aggregator": "avg"
                    }
                  ],
                  "sort": {
                    "count": 25,
                    "order_by": [
                      {
                        "type": "formula",
                        "index": 0,
                        "order": "desc"
                      }
                    ]
                  },
                  "formulas": [
                    {
                      "alias": "Running Containers",
                      "formula": "query1"
                    },
                    {
                      "alias": "Percent change (from last week)",
                      "number_format": {
                        "unit": {
                          "type": "canonical_unit",
                          "unit_name": "percent"
                        }
                      },
                      "formula": "((query1 - calendar_shift(query2, '-1w', 'UTC')) / calendar_shift(query2, '-1w', 'UTC')) * 100"
                    },
                    {
                      "alias": "Vulnerability Count",
                      "formula": "query3"
                    }
                  ]
                }
              ]
            },
            "layout": {
              "x": 0,
              "y": 1,
              "width": 6,
              "height": 4
            }
